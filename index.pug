//- MIXINS
mixin animatedPath(cls, path)
  path(class=cls d=path)
    animate(attributeName='d' fill='freeze' dur='500ms' calcMode='spline'
      keySplines='0.190 1.000 0.220 1.000' keyTimes='0;1')


